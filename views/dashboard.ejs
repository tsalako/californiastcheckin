<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="max-w-6xl mx-auto p-6 space-y-10">
      <h1 class="text-3xl font-bold">üìà Analytics Dashboard</h1>

      <!-- Date Range Filter -->
      <form class="flex flex-wrap gap-4 mb-6 items-end" method="GET">
        <div>
          <label class="block text-sm font-medium text-gray-700" for="start"
            >Start Date</label
          >
          <input
            class="border border-gray-300 p-2 rounded"
            type="date"
            id="start"
            name="start"
            value="<%= start || '' %>"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700" for="end"
            >End Date</label
          >
          <input
            class="border border-gray-300 p-2 rounded"
            type="date"
            id="end"
            name="end"
            value="<%= end || '' %>"
          />
        </div>
        <button class="bg-blue-500 text-white px-4 py-2 rounded" type="submit">
          Apply
        </button>
        <div class="flex flex-wrap gap-2">
          <button
            class="bg-gray-400 text-white px-4 py-2 rounded"
            type="button"
            onclick="setYesterday()"
          >
            Yesterday
          </button>
          <button
            class="bg-gray-400 text-white px-4 py-2 rounded"
            type="button"
            onclick="setThisWeek()"
          >
            This Week
          </button>
          <button
            class="bg-gray-400 text-white px-4 py-2 rounded"
            type="button"
            onclick="setThisMonth()"
          >
            This Month
          </button>
          <button
            class="bg-gray-400 text-white px-4 py-2 rounded"
            type="button"
            onclick="setThisQuarter()"
          >
            This Quarter
          </button>
          <button
            class="bg-gray-400 text-white px-4 py-2 rounded"
            type="button"
            onclick="setThisYear()"
          >
            This Year
          </button>
        </div>
      </form>

      <!-- Leaderboard -->
      <section>
        <h2 class="text-xl font-semibold mb-2">üèÜ Leaderboard</h2>
        <div class="overflow-x-auto">
          <div class="overflow-y-auto max-h-96">
            <table class="w-full text-left bg-white rounded shadow">
              <thead class="sticky top-0 bg-gray-200 z-10">
                <tr>
                  <th class="p-3">Rank</th>
                  <th class="p-3">Name</th>
                  <th class="p-3">Visits</th>
                </tr>
              </thead>
              <tbody>
                <% leaderboard.forEach(user => { %>
                <tr class="border-t">
                  <td class="p-3"><%= user.rank %></td>
                  <td class="p-3"><%= user.name %></td>
                  <td class="p-3"><%= user.visits %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <!-- Visits Chart -->
      <section>
        <h2 class="text-xl font-semibold mb-2">üìÜ Visits per Day</h2>
        <canvas id="visitsChart"></canvas>
      </section>

      <!-- New Passes Chart -->
      <section>
        <h2 class="text-xl font-semibold mb-2">üìÖ New Passes per Day</h2>
        <canvas id="passesChart"></canvas>
      </section>

      <!-- Update Log -->
      <section>
        <h2 class="text-xl font-semibold mb-2">üìã Update Log</h2>
        <div class="overflow-x-auto">
          <div class="overflow-y-auto max-h-96">
            <table class="w-full text-left bg-white rounded shadow">
              <thead class="sticky top-0 bg-gray-200 z-10">
                <tr>
                  <th class="p-3">Name</th>
                  <th class="p-3">Update Time</th>
                  <th class="p-3">Action</th>
                  <th class="p-3">Has Devices?</th>
                </tr>
              </thead>
              <tbody>
                <% updateLog.forEach(row => { %>
                <tr class="border-t">
                  <td class="p-3"><%= row.name %></td>
                  <td class="p-3">
                    <%= new Date(row.updateTime).toLocaleString('en-US', {
                    timeZone: 'America/Los_Angeles', weekday: 'short', month:
                    'short', day: 'numeric', year: 'numeric', hour: 'numeric',
                    minute: '2-digit', hour12: true }) %>
                  </td>
                  <td class="p-3">
                    <%= row.isUpdate ? 'Visited' : 'Created' %>
                  </td>
                  <td class="p-3"><%= row.hasDevices ? '‚úÖ' : '‚ùå' %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </section>
    </div>

    <script>
      const passesData = <%- JSON.stringify(passesPerDay) %>;
      const visitsData = <%- JSON.stringify(visitsPerDay) %>;

      function renderChart(canvasId, data, label) {
        const labels = Object.keys(data).sort();
        const counts = labels.map(d => data[d]);

        new Chart(document.getElementById(canvasId), {
            type: 'line',
            data: {
                labels,
                datasets: [{
                label,
                data: counts,
                fill: true,
                borderColor: 'rgb(59, 130, 246)',
                backgroundColor: 'rgba(59, 130, 246, 0.2)',
                tension: 0.3
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            title: function (context) {
                            const rawDate = context[0].label;
                            const date = new Date(`${rawDate}T00:00`);
                            return date.toLocaleDateString('en-US', {
                                weekday: 'short',
                                year: 'numeric',
                                month: 'short',
                                day: 'numeric'
                            });
                            }
                        }
                    }
                }
            }
        });
      }

      renderChart("visitsChart", visitsData, "Visits");
      renderChart("passesChart", passesData, "New Passes");

      function setThisWeek() {
        const today = new Date();
        const start = new Date();
        start.setDate(today.getDate() - today.getDay()); // Sunday
        document.getElementById("start").value = start.toISOString().split("T")[0];
        document.getElementById("end").value = today.toISOString().split("T")[0];
        document.querySelector("form").submit();
      }

      function setYesterday() {
        const y = new Date();
        y.setDate(y.getDate() - 1);
        const yStr = y.toISOString().split("T")[0];
        document.getElementById("start").value = yStr;
        document.getElementById("end").value = yStr;
        document.querySelector("form").submit();
      }

      function setThisMonth() {
        const today = new Date();
        const start = new Date(today.getFullYear(), today.getMonth(), 1);
        document.getElementById("start").value = start.toISOString().split("T")[0];
        document.getElementById("end").value = today.toISOString().split("T")[0];
        document.querySelector("form").submit();
      }

      function setThisYear() {
        const today = new Date();
        const start = new Date(today.getFullYear(), 0, 1);
        document.getElementById("start").value = start.toISOString().split("T")[0];
        document.getElementById("end").value = today.toISOString().split("T")[0];
        document.querySelector("form").submit();
      }

      function setThisQuarter() {
        const today = new Date();
        const quarter = Math.floor(today.getMonth() / 3);
        const startMonth = quarter * 3;
        const start = new Date(today.getFullYear(), startMonth, 1);
        document.getElementById("start").value = start.toISOString().split("T")[0];
        document.getElementById("end").value = today.toISOString().split("T")[0];
        document.querySelector("form").submit();
      }
    </script>
  </body>
</html>
