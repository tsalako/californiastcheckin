<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="max-w-6xl mx-auto p-6 space-y-10">
      <h1 class="text-3xl font-bold">üìà Analytics Dashboard</h1>

      <!-- Date Range Filter -->
      <form method="GET" class="flex flex-col gap-4 mb-6">
        <!-- New 2-part quick range: This/Last √ó Day/Week/Month/Quarter/Year -->
        <div class="flex flex-wrap items-end gap-3">
          <div class="flex items-center gap-2">
            <label class="text-sm font-medium text-gray-700">Window</label>
            <select name="mode" class="border border-gray-300 p-2 rounded">
              <option value="this" <%= (mode==='this')?'selected':'' %>>This</option>
              <option value="last" <%= (mode==='last')?'selected':'' %>>Last</option>
            </select>
          </div>

          <div class="flex items-center gap-2">
            <label class="text-sm font-medium text-gray-700">Period</label>
            <select name="period" class="border border-gray-300 p-2 rounded">
              <option value="day" <%= (period==='day')?'selected':'' %>>Day</option>
              <option value="week" <%= (period==='week')?'selected':'' %>>Week</option>
              <option value="month" <%= (period==='month')?'selected':'' %>>Month</option>
              <option value="quarter" <%= (period==='quarter')?'selected':'' %>>Quarter</option>
              <option value="year" <%= (period==='year')?'selected':'' %>>Year</option>
            </select>
          </div>

          <button class="bg-blue-500 text-white px-4 py-2 rounded" type="submit">
            Apply
          </button>

          <div class="flex items-center gap-2">
            <button
              type="submit"
              name="all"
              value="1"
              class="bg-blue-500 text-white px-4 py-2 rounded"
            >
              All&nbsp;Time
            </button>
          </div>
        </div>

        <!-- Manual dates still supported -->
        <div class="flex flex-wrap gap-4 items-end">
          <div>
            <label class="block text-sm font-medium text-gray-700" for="start">Start Date</label>
            <input class="border border-gray-300 p-2 rounded" type="date" id="start" name="start" value="<%= start || '' %>" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700" for="end">End Date</label>
            <input class="border border-gray-300 p-2 rounded" type="date" id="end" name="end" value="<%= end || '' %>" />
          </div>
          <button class="bg-blue-500 text-white px-4 py-2 rounded" type="submit">
            Apply manual dates
          </button>
        </div>
      </form>

      <!-- Leaderboard -->
      <section>
        <details class="bg-white rounded shadow" open>
          <summary class="cursor-pointer select-none px-4 py-3 text-lg font-semibold flex items-center justify-between">
            <span>üèÜ Leaderboard</span>
            <span class="text-sm text-gray-500">toggle</span>
          </summary>
          <div class="p-4">
            <div class="overflow-x-auto">
              <div class="overflow-y-auto max-h-96">
                <table class="w-full text-left bg-white rounded shadow">
                  <thead class="sticky top-0 bg-gray-200 z-10">
                    <tr>
                      <th class="p-3">Rank</th>
                      <th class="p-3">Name</th>
                      <th class="p-3">Visits</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% leaderboard.forEach(user => { %>
                    <tr class="border-t">
                      <td class="p-3"><%= user.rank %></td>
                      <td class="p-3"><%= user.name %></td>
                      <td class="p-3"><%= user.visits %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </details>
      </section>

      <!-- Host Attribution Chart -->
      <section>
        <% if (typeof hostAttribution !== 'undefined' && hostAttribution.length) { %>
          <details class="bg-white rounded shadow" open>
            <summary class="cursor-pointer select-none px-4 py-3 text-lg font-semibold flex items-center justify-between">
              <span>Guest visits by house member</span>
              <span class="text-sm text-gray-500">toggle</span>
            </summary>
            <div class="p-4">
              <div class="overflow-x-auto">
                <div class="overflow-y-auto max-h-96">
                  <table class="w-full text-sm">
                    <thead class="bg-gray-50">
                      <tr>
                        <th class="p-2 text-left">House Member</th>
                        <th class="p-2 text-right">Visits</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% hostAttribution.forEach(row => { %>
                        <tr class="border-t">
                          <td class="p-2"><%= row.hostName %></td>
                          <td class="p-2 text-right"><%= row.visits %></td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </details>
        <% } %>
      </section>

      <!-- Visits Chart -->
      <section>
        <details class="bg-white rounded shadow" open>
          <summary class="cursor-pointer select-none px-4 py-3 text-lg font-semibold flex items-center justify-between">
            <span>üìÜ Visits per Day</span>
            <span class="text-sm text-gray-500">toggle</span>
          </summary>
          <div class="p-4">
            <div class="overflow-x-auto">
              <div class="overflow-y-auto max-h-96">
                <canvas id="visitsChart"></canvas>
              </div>
            </div>
          </div>
        </details>
      </section>

      <!-- New Passes Chart -->
      <section>
        <details class="bg-white rounded shadow" open>
          <summary class="cursor-pointer select-none px-4 py-3 text-lg font-semibold flex items-center justify-between">
            <span>üìÖ New Passes per Day</span>
            <span class="text-sm text-gray-500">toggle</span>
          </summary>
          <div class="p-4">
            <div class="overflow-x-auto">
              <div class="overflow-y-auto max-h-96">
                <canvas id="passesChart"></canvas>
              </div>
            </div>
          </div>
        </details>
      </section>

      <!-- Update Log -->

      <section>
        <details class="bg-white rounded shadow" open>
          <summary class="cursor-pointer select-none px-4 py-3 text-lg font-semibold flex items-center justify-between">
            <span>üìã Update Log</span>
            <span class="text-sm text-gray-500">toggle</span>
          </summary>
          <div class="p-4">
            <div class="overflow-x-auto">
              <div class="overflow-y-auto max-h-96">
                  <table class="w-full text-left bg-white rounded shadow">
                    <thead class="sticky top-0 bg-gray-200 z-10">
                      <tr>
                        <th class="p-3">Name</th>
                        <th class="p-3">Update Time</th>
                        <th class="p-3">Action</th>
                        <th class="p-3">Visit Kind</th>
                        <th class="p-3">Has Devices?</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% updateLog.forEach(row => { %>
                      <tr class="border-t">
                        <td class="p-3"><%= row.name %></td>
                        <td class="p-3"><%= row.updateTime %></td>
                        <td class="p-3">
                          <%= row.isUpdate ? 'Visited' : 'Created' %>
                        </td>
                        <td class="p-3">
                          <%= row.visitKind || '‚Äî' %>
                        </td>
                        <td class="p-3"><%= row.hasDevices ? '‚úÖ' : '‚ùå' %></td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
              </div>
            </div>
          </div>
        </details>
      </section>
    </div>

    <script>
      const passesData = <%- JSON.stringify(passesPerDay) %>;
      const visitsData = <%- JSON.stringify(visitsPerDay) %>;

      function renderChart(canvasId, data, label) {
        const labels = Object.keys(data).sort();
        const counts = labels.map(d => data[d]);

        new Chart(document.getElementById(canvasId), {
            type: 'line',
            data: {
                labels,
                datasets: [{
                label,
                data: counts,
                fill: true,
                borderColor: 'rgb(59, 130, 246)',
                backgroundColor: 'rgba(59, 130, 246, 0.2)',
                tension: 0.3
                }]
            },
            options: {
                // maintainAspectRatio: false,  // <- key line
                responsive: true,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            title: function (context) {
                            const rawDate = context[0].label;
                            const date = new Date(`${rawDate}T00:00`);
                            return date.toLocaleDateString('en-US', {
                                weekday: 'short',
                                year: 'numeric',
                                month: 'short',
                                day: 'numeric'
                            });
                            }
                        }
                    }
                }
            }
        });
      }

      renderChart("visitsChart", visitsData, "Visits");
      renderChart("passesChart", passesData, "New Passes");
    </script>
  </body>
</html>
