<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="max-w-6xl mx-auto p-6 space-y-10">
      <h1 class="text-3xl font-bold">ğŸ“ˆ Analytics Dashboard</h1>

      <!-- Leaderboard -->
      <section>
        <h2 class="text-xl font-semibold mb-2">ğŸ† Leaderboard</h2>
        <table class="w-full text-left bg-white rounded shadow">
          <thead>
            <tr class="bg-gray-200">
              <th class="p-3">Rank</th>
              <th class="p-3">Name</th>
              <th class="p-3">Visits</th>
            </tr>
          </thead>
          <tbody>
            <% leaderboard.forEach(user => { %>
              <tr class="border-t">
                <td class="p-3"><%= user.rank %></td>
                <td class="p-3"><%= user.name %></td>
                <td class="p-3"><%= user.visits %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </section>

      <!-- New Passes Chart -->
      <section>
        <h2 class="text-xl font-semibold mb-2">ğŸ“… New Passes per Day</h2>
        <canvas id="passesChart"></canvas>
      </section>

      <!-- Visits Chart -->
      <section>
        <h2 class="text-xl font-semibold mb-2">ğŸ“† Visits per Day</h2>
        <canvas id="visitsChart"></canvas>
      </section>

      <!-- Update Log -->
      <section>
        <h2 class="text-xl font-semibold mb-2">ğŸ“‹ Update Log</h2>
        <table class="w-full text-left bg-white rounded shadow">
          <thead>
            <tr class="bg-gray-200">
              <th class="p-3">Serial</th>
              <th class="p-3">Update Time</th>
              <th class="p-3">Is Update?</th>
              <th class="p-3">Has Devices?</th>
            </tr>
          </thead>
          <tbody>
            <% updateLog.forEach(row => { %>
              <tr class="border-t">
                <td class="p-3"><%= row.serialNumber %></td>
                <td class="p-3"><%= row.updateTime %></td>
                <td class="p-3"><%= row.isUpdate %></td>
                <td class="p-3"><%= row.hasDevices %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </div>

    <script>
      const passesData = <%- JSON.stringify(passesPerDay) %>;
      const visitsData = <%- JSON.stringify(visitsPerDay) %>;

      function renderChart(canvasId, data, label) {
        const labels = Object.keys(data).sort();
        const counts = labels.map(d => data[d]);

        new Chart(document.getElementById(canvasId), {
          type: 'line',
          data: {
            labels,
            datasets: [{
              label,
              data: counts,
              fill: true,
              borderColor: 'rgb(59, 130, 246)',
              backgroundColor: 'rgba(59, 130, 246, 0.2)',
              tension: 0.3
            }]
          },
          options: {
            responsive: true,
            plugins: {
              legend: { display: false }
            }
          }
        });
      }

      renderChart("passesChart", passesData, "New Passes");
      renderChart("visitsChart", visitsData, "Visits");
    </script>
  </body>
</html>
